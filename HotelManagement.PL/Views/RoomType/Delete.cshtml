@model HotelManagement.Web.Models.ViewModels.RoomTypeModel.RoomTypeViewModel

@{
    ViewData["Title"] = "Delete Room Type";
}

<!-- Load Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>

<div class="container mx-auto px-4 py-8 flex justify-center items-center min-h-screen">
    <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-lg">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-extrabold text-red-600 mb-2">Delete Room Type</h1>
            <p class="text-gray-600">Are you sure you want to delete this room type?</p>
            <p class="text-gray-500 text-sm mt-2">This action cannot be undone.</p>
        </div>

        <!-- Display the RoomType details for confirmation -->
        <div class="bg-gray-50 rounded-lg p-6 mb-8 border border-gray-200">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-2 text-sm">
                <dt class="text-gray-500 font-medium">@Html.DisplayNameFor(model => model.TypeName)</dt>
                <dd class="text-gray-900 font-semibold">@Html.DisplayFor(model => model.TypeName)</dd>

                <dt class="text-gray-500 font-medium mt-2">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="text-gray-900 mt-2">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="text-gray-500 font-medium mt-2">@Html.DisplayNameFor(model => model.BasePrice)</dt>
                <dd class="text-gray-900 mt-2">@Html.DisplayFor(model => model.BasePrice)</dd>

                <dt class="text-gray-500 font-medium mt-2">@Html.DisplayNameFor(model => model.MaxOccupancy)</dt>
                <dd class="text-gray-900 mt-2">@Html.DisplayFor(model => model.MaxOccupancy)</dd>

                <dt class="text-gray-500 font-medium mt-2">@Html.DisplayNameFor(model => model.Amenities)</dt>
                <dd class="text-gray-900 mt-2">@Html.DisplayFor(model => model.Amenities)</dd>
            </dl>
        </div>

        <!-- Form for deletion confirmation -->
        <form asp-action="Delete" asp-route-id="@Model.RoomTypeID" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RoomTypeID" />

            <div class="flex justify-end space-x-4 pt-4">
                <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent rounded-full shadow-lg text-base font-medium text-white bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-red-500 focus:ring-opacity-50">
                    <svg class="-ml-1 mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    Delete
                </button>
                <a asp-action="Index" class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-full shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out transform hover:scale-105">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
