@model HotelManagement.Web.Models.ViewModels.BookingModel.BookingViewModel
@{
    ViewData["Title"] = "Delete Booking";
}

<style>
    body {
        background-color: #f7f9fc;
    }
</style>

<div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-2xl overflow-hidden p-8">
        <div class="text-center mb-6">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-2">Delete Booking</h1>
            <h3 class="text-xl font-medium text-red-600">Are you sure you want to delete this booking?</h3>
            <p class="text-gray-500 mt-2">This action cannot be undone.</p>
        </div>

        <div class="border-t border-gray-200 mt-6 pt-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
                <div>
                    <h5 class="font-semibold text-gray-700 mb-2">Booking Details</h5>
                    <dl class="text-sm">
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Booking ID</dt>
                            <dd class="text-gray-900 font-bold">@Model.BookingID</dd>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Customer Name</dt>
                            <dd class="text-gray-900">@Model.CustomerFullName</dd>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Room Number</dt>
                            <dd class="text-gray-900">@Model.Room?.RoomNumber</dd>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Booking Status</dt>
                            <dd class="text-gray-900">@Model.BookingStatus</dd>
                        </div>
                    </dl>
                </div>
                <div>
                    <h5 class="font-semibold text-gray-700 mb-2">Dates & Price</h5>
                    <dl class="text-sm">
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Check-in Date</dt>
                            <dd class="text-gray-900">@Model.CheckInDate.ToShortDateString()</dd>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Check-out Date</dt>
                            <dd class="text-gray-900">@Model.CheckOutDate.ToShortDateString()</dd>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <dt class="font-medium text-gray-500">Total Price</dt>
                            <dd class="text-gray-900 font-bold text-lg">@Model.TotalPrice.ToString("C2")</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-8 flex justify-center space-x-4">
            <input type="hidden" asp-for="BookingID" />
            <button type="submit" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out transform hover:scale-105">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                Confirm Delete
            </button>
            <a asp-action="Index" class="inline-flex items-center justify-center px-6 py-3 border-2 border-gray-300 text-base font-medium rounded-full text-gray-700 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out transform hover:scale-105">
                Cancel
            </a>
        </form>
    </div>
</div>
