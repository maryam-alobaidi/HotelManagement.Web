@model HotelManagement.Web.Models.ViewModels.PaymentMethodModel.PaymentMethodCreateEditViewModel

@{
    ViewData["Title"] = "Edit Payment Method";
}

<div class="container my-5 p-4 bg-light rounded shadow">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h1 class="h3 text-warning fw-bold">
            <i class="fas fa-edit me-2"></i> Edit Payment Method
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.HiddenFor(m => m.MethodID)

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Method Name -->
                <div class="mb-3">
                    <label asp-for="MethodName" class="form-label fw-bold"></label>
                    <input asp-for="MethodName" class="form-control" placeholder="Enter method name" />
                    <span asp-validation-for="MethodName" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Active Checkbox -->
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
