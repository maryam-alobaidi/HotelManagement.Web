@model HotelManagement.Web.Models.ViewModels.PaymentMethodModel.PaymentMethodViewModel

@{
    ViewData["Title"] = "Payment Method Details";
}

<div class="container mx-auto p-8 bg-white rounded-xl shadow-lg max-w-2xl font-sans">
    <div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-300">
        <h1 class="text-4xl font-extrabold text-gray-800">Payment Method Details</h1>
    </div>

    <div class="bg-gray-50 p-8 rounded-xl shadow-inner space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-6 gap-x-8">
            <!-- Method ID -->
            <div class="flex flex-col p-4 border rounded-md bg-white shadow-sm">
                <span class="text-gray-500 text-sm uppercase tracking-wide">Method ID</span>
                <span class="text-xl font-medium text-gray-900">#@Html.DisplayFor(model => model.MethodID)</span>
            </div>

            <!-- Method Name -->
            <div class="flex flex-col p-4 border rounded-md bg-white shadow-sm">
                <span class="text-gray-500 text-sm uppercase tracking-wide">Method Name</span>
                <span class="text-xl font-medium text-gray-900">@Html.DisplayFor(model => model.MethodName)</span>
            </div>

            <!-- Description -->
            <div class="flex flex-col md:col-span-2 p-4 border rounded-md bg-white shadow-sm">
                <span class="text-gray-500 text-sm uppercase tracking-wide">Description</span>
                <span class="text-lg font-medium text-gray-900">@Html.DisplayFor(model => model.Description)</span>
            </div>

            <!-- Is Active -->
            <div class="flex flex-col p-4 border rounded-md bg-white shadow-sm">
                <span class="text-gray-500 text-sm uppercase tracking-wide">Status</span>
                <div class="flex items-center mt-1">
                    @if (Model.IsActive)
                    {
                        <span class="text-green-600 text-2xl" title="Active">✔</span>
                        <span class="ml-2 text-lg font-semibold text-gray-700">Active</span>
                    }
                    else
                    {
                        <span class="text-red-600 text-2xl" title="Inactive">✖</span>
                        <span class="ml-2 text-lg font-semibold text-gray-700">Inactive</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-8 flex justify-center space-x-4">
        <a asp-action="Edit" asp-route-id="@Model?.MethodID" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-full shadow-lg transition duration-300 transform hover:scale-105">
            <i class="fas fa-edit mr-2"></i> Edit
        </a>
        <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-full shadow-lg transition duration-300 transform hover:scale-105">
            <i class="fas fa-arrow-left mr-2"></i> Back to List
        </a>
    </div>
</div>
