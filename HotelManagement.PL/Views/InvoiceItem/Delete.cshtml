@model HotelManagement.Web.Models.ViewModels.InvoiceItem.InvoiceItemViewModel

@{
    ViewData["Title"] = "Delete Invoice Item";
}

<!-- Load Tailwind CSS from CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl w-full bg-white p-10 rounded-xl shadow-2xl">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">
                Delete Invoice Item
            </h2>
            <p class="mt-2 text-lg text-gray-600">
                Are you sure you want to delete this invoice item? This action cannot be undone.
            </p>
        </div>

        <!-- Warning block for deletion -->
        <div class="bg-red-100 border-l-4 border-red-500 p-4 rounded-md mb-6" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                    <!-- Warning icon -->
                    <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.487 0l5.58 9.92c.754 1.346-.239 3.03-1.742 3.03H4.419c-1.503 0-2.497-1.684-1.742-3.03l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-800">
                        Warning: Deleting this item is permanent and will affect the associated invoice total.
                    </p>
                </div>
            </div>
        </div>

        <!-- Display item details in a grid layout -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm">
                <div class="text-sm font-medium text-gray-500">Invoice Item ID</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@Model.InvoiceItemID</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm">
                <div class="text-sm font-medium text-gray-500">Invoice ID</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@Model.InvoiceID</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm md:col-span-2">
                <div class="text-sm font-medium text-gray-500">Item Description</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@Model.ItemDescription</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm">
                <div class="text-sm font-medium text-gray-500">Quantity</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@Model.Quantity</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm">
                <div class="text-sm font-medium text-gray-500">Unit Price</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@Model.UnitPrice.ToString("C")</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm">
                <div class="text-sm font-medium text-gray-500">Item Type</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@Model.ItemType</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 shadow-sm">
                <div class="text-sm font-medium text-gray-500">Line Total</div>
                <div class="mt-1 text-lg font-semibold text-gray-900">@String.Format("{0:C}", Model.LineTotal)</div>
            </div>
        </div>

        <!-- Form for submission with action buttons -->
        <form asp-action="Delete" asp-controller="InvoiceItem" method="post" class="mt-8 flex justify-between">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="InvoiceItemID" />
            <input type="hidden" asp-for="InvoiceID" />
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                Back to List
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                Confirm Delete
            </button>
        </form>
    </div>
</div>
