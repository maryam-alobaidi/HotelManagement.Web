@using HotelManagement.Domain.Enums
@model HotelManagement.Web.Models.ViewModels.InvoiceItem.InvoiceItemCreateEditViewModel

@{
    ViewData["Title"] = "Edit Invoice Item";
}

<!-- Load Tailwind CSS from CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>

<div class="min-h-screen flex flex-col items-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-xl w-full bg-white p-10 rounded-xl shadow-2xl">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">
                Edit Invoice Item
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Editing Invoice Item ID: @Model.InvoiceItemID
            </p>
        </div>

        <form asp-action="Edit" asp-controller="InvoiceItem" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-600 font-medium"></div>

            <!-- Hidden input for the InvoiceItemID, since it's not being edited by the user -->
            <input type="hidden" asp-for="InvoiceItemID" />
            <input type="hidden" asp-for="InvoiceID" />

            <!-- Display the Invoice ID as read-only text -->
            <div class="space-y-1">
                <label asp-for="InvoiceID" class="block text-sm font-medium text-gray-700">Invoice ID</label>
                <div class="mt-1 block w-full px-3 py-2 text-base border-gray-300 bg-gray-100 rounded-md sm:text-sm">
                    @Model.InvoiceID
                </div>
            </div>

            <!-- Item Description -->
            <div class="space-y-1">
                <label asp-for="ItemDescription" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="ItemDescription" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="ItemDescription" class="mt-2 text-sm text-red-600"></span>
            </div>

            <!-- Quantity -->
            <div class="space-y-1">
                <label asp-for="Quantity" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Quantity" type="number" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="Quantity" class="mt-2 text-sm text-red-600"></span>
            </div>

            <!-- Unit Price -->
            <div class="space-y-1">
                <label asp-for="UnitPrice" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="UnitPrice" type="number" step="0.01" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="UnitPrice" class="mt-2 text-sm text-red-600"></span>
            </div>

            <!-- Item Type Dropdown -->
            <div class="space-y-1">
                <label asp-for="ItemType" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="ItemType" asp-items="Html.GetEnumSelectList<InvoiceItemTypeEnum>()" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"></select>
                <span asp-validation-for="ItemType" class="mt-2 text-sm text-red-600"></span>
            </div>

            <div class="flex items-center justify-between mt-6">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Back to List
                </a>
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
