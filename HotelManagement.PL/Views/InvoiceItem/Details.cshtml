@model HotelManagement.Web.Models.ViewModels.InvoiceItem.InvoiceItemViewModel

@{
    ViewData["Title"] = "Invoice Item Details";
}

<!-- Load Tailwind CSS from CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>

<div class="min-h-screen flex flex-col items-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl w-full bg-white p-10 rounded-xl shadow-2xl">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">
                Invoice Item Details
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Details for Invoice Item ID: @Model.InvoiceItemID
            </p>
        </div>

        <div class="bg-gray-50 border border-gray-200 rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:p-6">
                <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-8">
                    <!-- Invoice Item ID -->
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.InvoiceItemID)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.InvoiceItemID)
                        </dd>
                    </div>

                    <!-- Invoice ID -->
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.InvoiceID)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.InvoiceID)
                        </dd>
                    </div>

                    <!-- Item Description -->
                    <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.ItemDescription)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.ItemDescription)
                        </dd>
                    </div>

                    <!-- Quantity -->
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                    </div>

                    <!-- Unit Price -->
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.UnitPrice)
                        </dd>
                    </div>

                    <!-- Item Type -->
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.ItemType)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.ItemType)
                        </dd>
                    </div>

                    <!-- Line Total -->
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">
                            @Html.DisplayNameFor(model => model.LineTotal)
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @Html.DisplayFor(model => model.LineTotal)
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Action Links -->
        <div class="mt-8 flex justify-center space-x-4">
            <a asp-action="Edit" asp-route-id="@Model?.InvoiceItemID" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Edit
            </a>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Back to List
            </a>
        </div>
    </div>
</div>
