        <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary btn-lg me-3">
            <i class="fas fa-bed"></i> Book Your Room Now
        </a>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-light btn-lg">
