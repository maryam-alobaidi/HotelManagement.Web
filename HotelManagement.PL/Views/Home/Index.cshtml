@{
    ViewData["Title"] = "Welcome to Our Luxury Hotel"; // Page title for the browser tab
}

<style>
    /* Custom styles for this page */
    .hero-section {
        background: url('/images/hotel-hero-background.jpg') no-repeat center center; /* Replace with your actual image path */
        background-size: cover;
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Text shadow for better readability */
        padding: 100px 0;
        min-height: 600px; /* Minimum height for the hero section */
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4); /* Transparent overlay to make text readable */
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 30px;
        text-align: center;
    }

    .card-custom {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .card-custom:hover {
            transform: translateY(-5px);
        }

    .icon-large {
        font-size: 3rem;
        color: #007bff; /* Icon color */
        margin-bottom: 15px;
    }
</style>

