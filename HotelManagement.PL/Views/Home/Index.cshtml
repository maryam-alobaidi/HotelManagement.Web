@{
    ViewData["Title"] = "Welcome to Our Luxury Hotel";
}

<!-- Custom Styles -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
        background-color: rgba(30, 30, 60, 0.9);
    }

        .navbar .nav-link {
            color: #f8f8f8 !important;
            font-weight: 500;
            margin-left: 15px;
            transition: color 0.3s;
        }

            .navbar .nav-link:hover {
                color: #ffd700 !important;
            }

    .hero-section {
        background: url('/images/hotel-hero-background.jpg') no-repeat center center;
        background-size: cover;
        color: white;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        min-height: 100vh;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.55);
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

        .hero-content h1 {
            font-size: 4rem;
            font-weight: bold;
            color: #ffd700;
            margin-bottom: 20px;
        }

        .hero-content p {
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

    .btn-hero {
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 50px;
        transition: all 0.3s;
        position: relative;
        z-index: 10;
    }

        .btn-hero:hover {
            transform: scale(1.05);
        }

    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 40px;
        text-align: center;
        color: #1e1e3c;
    }

    .about-img {
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    .card-custom {
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease-in-out;
        background: #ffffff;
    }

        .card-custom:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.2);
        }

    .icon-large {
        font-size: 3rem;
        color: #ffb400;
    }

    .gallery img {
        border-radius: 15px;
        transition: transform 0.3s ease-in-out;
    }

        .gallery img:hover {
            transform: scale(1.08);
        }

    .cta-section {
        background: linear-gradient(135deg, #1e1e3c, #ffb400);
        color: white;
        padding: 70px 0;
        text-align: center;
    }

        .cta-section h2 {
            font-size: 2.8rem;
            margin-bottom: 30px;
        }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
        <a class="navbar-brand text-white fw-bold" href="#">Luxury Hotel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon bg-light"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                <li class="nav-item"><a class="nav-link" href="#gallery">Gallery</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1>Welcome to Our Luxury Hotel</h1>
        <p class="lead mb-4">Where elegance meets comfort in the heart of the city.</p>

        @if (User.Identity.IsAuthenticated && (User.IsInRole("Customer") || User.IsInRole("Receptionist")))
        {
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-warning btn-lg btn-hero me-3">
                <i class="fas fa-bed"></i> Book Now
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-warning btn-lg btn-hero me-3">
                <i class="fas fa-bed"></i> Book Now
            </a>
        }

        <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-light btn-lg btn-hero">
            <i class="fas fa-phone-alt"></i> Contact Us
        </a>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5 bg-light">
    <div class="container">
        <h2 class="section-title">About Our Hotel</h2>
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="/images/hotel-lobby.jpg" class="img-fluid about-img" alt="Hotel Lobby">
            </div>
            <div class="col-md-6">
                <p class="lead">
                    Nestled in the heart of the city, our luxury hotel offers an unforgettable stay.
                    Elegant rooms, world-class facilities, and unmatched hospitality await you.
                </p>
                <p>
                    Whether for business or leisure, our staff is ready 24/7 to make your stay truly special.
                </p>
                <a asp-controller="About" asp-action="Index" class="btn btn-primary btn-lg">Learn More</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5">
    <div class="container">
        <h2 class="section-title">Our Distinctive Services</h2>
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="card card-custom h-100 p-4">
                    <i class="fas fa-wifi icon-large mb-3"></i>
                    <h5 class="card-title">High-Speed Internet</h5>
                    <p class="card-text">Enjoy free high-speed Wi-Fi across the entire hotel.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-custom h-100 p-4">
                    <i class="fas fa-utensils icon-large mb-3"></i>
                    <h5 class="card-title">Fine Dining</h5>
                    <p class="card-text">Savor delicious dishes prepared by world-class chefs.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-custom h-100 p-4">
                    <i class="fas fa-spa icon-large mb-3"></i>
                    <h5 class="card-title">Spa & Wellness</h5>
                    <p class="card-text">Relax and rejuvenate in our luxury spa and wellness center.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Gallery Section -->
<section id="gallery" class="py-5 bg-light">
    <div class="container">
        <h2 class="section-title">Our Gallery</h2>
        <div class="row g-3 gallery">
            <div class="col-md-4"><img src="/images/room1.jpg" class="img-fluid" alt="Room"></div>
            <div class="col-md-4"><img src="/images/pool.jpg" class="img-fluid" alt="Pool"></div>
            <div class="col-md-4"><img src="/images/restaurant.jpg" class="img-fluid" alt="Restaurant"></div>
            <div class="col-md-4"><img src="/images/spa.jpg" class="img-fluid" alt="Spa"></div>
            <div class="col-md-4"><img src="/images/lobby.jpg" class="img-fluid" alt="Lobby"></div>
            <div class="col-md-4"><img src="/images/hotel-view.jpg" class="img-fluid" alt="View"></div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <h2 class="mb-4">Book Your Stay with Us Today</h2>

        @if (User.Identity.IsAuthenticated && (User.IsInRole("Customer") || User.IsInRole("Receptionist")))
        {
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-light btn-lg btn-hero">
                <i class="fas fa-calendar-check"></i> Reserve Now
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg btn-hero">
                <i class="fas fa-calendar-check"></i> Reserve Now
            </a>
        }
    </div>
</section>
