@model HotelManagement.Web.Models.ViewModels.InvoiceModel.InvoiceViewModel

@{
    ViewData["Title"] = "Delete Invoice";
}

<!-- Load Tailwind CSS from CDN -->
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full space-y-8 bg-white p-10 rounded-xl shadow-2xl">
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-bold text-gray-900">
                Delete Invoice
            </h2>
            <p class="mt-2 text-sm text-red-600 font-medium">
                Are you sure you want to delete this invoice? This action cannot be undone.
            </p>
        </div>

        <div class="border-t border-gray-200 mt-6 pt-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
                <!-- Invoice ID -->
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.InvoiceID)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.InvoiceID)
                    </dd>
                </div>

                <!-- Booking ID -->
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.BookingID)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.BookingID)
                    </dd>
                </div>

                <!-- Customer ID -->
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.CustomerID)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.CustomerID)
                    </dd>
                </div>

                <!-- Invoice Date -->
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.InvoiceDate)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.InvoiceDate)
                    </dd>
                </div>

                <!-- Total Amount -->
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.TotalAmount)
                    </dd>
                </div>

                <!-- Amount Paid -->
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.AmountPaid)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.AmountPaid)
                    </dd>
                </div>

                <!-- Invoice Status -->
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.InvoiceStatus)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.InvoiceStatus)
                    </dd>
                </div>

                <!-- Generated By Employee ID -->
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 rounded-md">
                    <dt class="text-sm font-medium text-gray-500">
                        @Html.DisplayNameFor(model => model.GeneratedByEmployeeID)
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Html.DisplayFor(model => model.GeneratedByEmployeeID)
                    </dd>
                </div>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-8 space-y-6">
            <input type="hidden" asp-for="InvoiceID" />
            <div class="flex items-center justify-end space-x-4">
                <a asp-action="Index" class="group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                    Cancel
                </a>
                <button type="submit" class="group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    Delete
                </button>
            </div>
        </form>
    </div>
</div>
