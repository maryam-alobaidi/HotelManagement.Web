@model IEnumerable<HotelManagement.Web.Models.ViewModels.PaymentModel.PaymentDetailsViewModel>

@{
    ViewData["Title"] = "Payment Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Payment
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Payment Details</h2>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Payment ID</th>
                                <th>Invoice ID</th>
                                <th>Username</th>
                                <th>Invoice Status</th>
                                <th>Amount</th>
                                <th>Payment Date</th>
                                <th>Payment Method</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PaymentID</td>
                                    <td>@item.InvoiceID</td>
                                    <td>@(item.Username ?? "-")</td>
                                    <td>@(item.InvoiceStatus.ToString() ?? "-")</td>
                                    <td>@item.Amount.ToString("F2")</td>
                                    <td>@(item.PaymentDate.HasValue? item.PaymentDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                                    <td>@(item.PaymentMethodName ?? "-")</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.PaymentID" class="btn btn-sm btn-info mb-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PaymentID" class="btn btn-sm btn-secondary mb-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PaymentID" class="btn btn-sm btn-danger mb-1">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No payments found.
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-header.bg-primary {
        background-color: #007bff !important;
    }

    .table thead th {
        background-color: #343a40;
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-body {
        padding: 2rem;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn i {
            margin-right: 5px;
        }
</style>
