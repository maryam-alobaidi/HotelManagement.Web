@model HotelManagement.Web.Models.ViewModels.PaymentModel.PaymentEditViewModel

@{
    ViewData["Title"] = "Edit Payment";
}

<div class="container mx-auto p-6 bg-blue-50 rounded-lg shadow-2xl max-w-4xl font-sans">
    <div class="text-center">
        <h1 class="text-4xl font-extrabold text-blue-900 mb-2">Edit Payment Details</h1>
        <p class="text-blue-600 mb-8">Review the payment information below. Only some fields can be modified.</p>
    </div>

    <form asp-action="Edit" method="post" class="space-y-8">
        @Html.AntiForgeryToken()

        <!-- Validation Summary for general errors -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 font-medium p-4 bg-red-100 rounded-lg border border-red-200"></div>

        <!-- Hidden input for the Payment ID -->
        <input type="hidden" asp-for="PaymentID" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Booking ID Field (Read-only) -->
            <div class="flex flex-col">
                <label asp-for="BookingID" class="text-gray-700 font-semibold mb-2">Booking ID</label>
                <input asp-for="BookingID" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-200 cursor-not-allowed px-4 py-2 text-gray-800" readonly />
                <span asp-validation-for="BookingID" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Invoice ID Field (Read-only) -->
            <div class="flex flex-col">
                <label asp-for="InvoiceID" class="text-gray-700 font-semibold mb-2">Invoice ID</label>
                <input asp-for="InvoiceID" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-200 cursor-not-allowed px-4 py-2 text-gray-800" readonly />
                <span asp-validation-for="InvoiceID" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Payment Date Field (Read-only) -->
            <div class="flex flex-col">
                <label asp-for="PaymentDate" class="text-gray-700 font-semibold mb-2">Payment Date</label>
                <input asp-for="PaymentDate" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-200 cursor-not-allowed px-4 py-2 text-gray-800" readonly />
                <span asp-validation-for="PaymentDate" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Amount Field (Editable) -->
            <div class="flex flex-col">
                <label asp-for="Amount" class="text-gray-700 font-semibold mb-2">Amount</label>
                <input asp-for="Amount" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 px-4 py-2" type="number" step="0.01" />
                <span asp-validation-for="Amount" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Payment Method Field (Editable) -->
            <div class="flex flex-col">
                <label asp-for="PaymentMethodID" class="text-gray-700 font-semibold mb-2">Payment Method</label>
                <select asp-for="PaymentMethodID" asp-items="Model.PaymentMethodsList" class="form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 px-4 py-2">
                    <option value="">-- Select Method --</option>
                </select>
                <span asp-validation-for="PaymentMethodID" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Transaction Reference Field (Editable) -->
            <div class="flex flex-col">
                <label asp-for="TransactionReference" class="text-gray-700 font-semibold mb-2">Transaction Reference</label>
                <input asp-for="TransactionReference" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 px-4 py-2" />
                <span asp-validation-for="TransactionReference" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Recorded By Employee Field (Editable) -->
            <div class="flex flex-col">
                <label asp-for="RecordedByEmployeeID" class="text-gray-700 font-semibold mb-2">Recorded By Employee</label>
                <select asp-for="RecordedByEmployeeID" asp-items="Model.EmployeeList" class="form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 px-4 py-2">
                    <option value="">-- Select Employee --</option>
                </select>
                <span asp-validation-for="RecordedByEmployeeID" class="text-red-500 text-sm mt-1"></span>
            </div>
        </div>

        <div class="flex justify-center space-x-4 mt-8">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition duration-300 transform hover:scale-105">
                <i class="fas fa-save mr-2"></i> Save Changes
            </button>
            <a asp-action="Index" class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition duration-300 transform hover:scale-105">
                <i class="fas fa-arrow-left mr-2"></i> Cancel
            </a>
        </div>
    </form>
</div>
