@model HotelManagement.Web.Models.ViewModels.PaymentModel.PaymentDetailsByIdViewModel

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mx-auto p-6 bg-gray-50 rounded-lg shadow-md max-w-2xl">
    <div class="text-center">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Delete Payment</h1>
        <h3 class="text-xl text-red-600 font-semibold mb-6">Are you sure you want to delete this payment?</h3>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-inner border border-gray-200">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">
            <dt class="font-medium">Payment ID:</dt>
            <dd class="text-gray-900">@Model.PaymentID</dd>

            <dt class="font-medium">Invoice ID:</dt>
            <dd class="text-gray-900">@Model.InvoiceID</dd>

            <dt class="font-medium">Amount:</dt>
            <dd class="text-gray-900">@string.Format("{0:C}", Model.Amount)</dd>

            <dt class="font-medium">Payment Date:</dt>
            <dd class="text-gray-900">@Model.PaymentDate.ToString("yyyy-MM-dd")</dd>

            <dt class="font-medium">Payment Method:</dt>
            <dd class="text-gray-900">@Model.PaymentMethodName</dd>

            <dt class="font-medium">Transaction Reference:</dt>
            <dd class="text-gray-900">@Model.TransactionReference</dd>

            <dt class="font-medium">Recorded By:</dt>
            <dd class="text-gray-900">@Model.EmployeeName</dd>

            <dt class="font-medium">Invoice Status:</dt>
            <dd class="text-gray-900">@Model.InvoiceStatus</dd>
        </dl>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.PaymentID" method="post" class="mt-8 flex justify-center space-x-4">
        @Html.AntiForgeryToken()
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
            Delete
        </button>
        <a asp-action="Index" class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
            Cancel
        </a>
    </form>
</div>
